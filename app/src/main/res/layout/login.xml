<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/glowalogin"
        android:textSize="26dp"
        android:id="@+id/glowalogin"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/glowalogin"
        android:layout_marginTop="15dp"
        android:id="@+id/linearLayout"
        android:orientation="horizontal"></LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="15dp"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="30dp"
        android:hint="Login"
        android:id="@+id/zaloguj"></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="15dp"
        android:layout_below="@id/zaloguj"
        android:layout_marginTop="30dp"
        android:hint="HasÅ‚o"
        android:id="@+id/haslo"
        android:inputType="textPassword"></EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zalogujprzycisk"
        android:id="@+id/zalogujprzycisk"
        android:layout_below="@id/haslo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="15dp"></Button>

</RelativeLayout>